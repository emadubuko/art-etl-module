
@{
    ViewBag.Title = "Index";
}
@section AddToHead{
    <link rel="stylesheet" type="text/css" href="../../../app-assets/vendors/css/file-uploaders/dropzone.min.css">
    <link rel="stylesheet" type="text/css" href="~/app-assets/css/plugins/file-uploaders/dropzone.css">
    <style>
        .btn.btn-warning.cancel {
            display: none
        }

        .dropzone {
            min-height: 350px;
            border: 2px dashed #fff;
            background: #F3F3F3;
        }
            .dropzone .dz-message {
                color: #00a651;
            }
                .dropzone .dz-message:before {
                    color: #00a651;
                }
        .dz-success-mark{
            color:green;
            background-color: green;
        }
        /*.dz-error-message{
            color: red;
            background-color:red;
        }*/

        .dz-error-mark {
            color: red;
            background-color: red;
        }
    </style>
}

<section id="dropzone-examples">
    <div class="row">
        <div class="offset-1 col-sm-10">

            <div class="card box-shadow-0 border-success">
                <div class="card-header card-head-inverse bg-success">
                    <h4 class="card-title text-center text-white">NDR file upload page</h4>
                </div>
                <div class="card-content">
                    <div class="card-body">

                        <form action="/Fileupload/UploadFile" class="dropzone dropzone-area dz-clickable" id="dpz-file-limits">
                            <div class="dz-message">Drop Files Here To Upload</div>
                        </form>

                    </div>
                </div>
            </div>

        </div>
    </div>
</section>




@section Scripts{
    <script src="~/app-assets/vendors/js/extensions/dropzone.min.js" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            Dropzone.prototype.defaultOptions.maxFilesize = 1000;
            Dropzone.prototype.defaultOptions.maxFiles = 5;
            Dropzone.prototype.defaultOptions.acceptedFiles = "zip/*";

