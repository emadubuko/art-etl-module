@model NDR.Web.Models.RegisterViewModel


@{
    ViewBag.Title = "CreateFacility";
}
@section AddToHead{
    <link rel="stylesheet" type="text/css" href="~/app-assets/vendors/css/forms/selects/select2.min.css">
}
<section id="configuration">
    <div class="row">
        <div class="offset-3 col-5">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Create User</h4>
                </div>
                <div class="card-content collapse show">
                    <div class="card-body card-dashboard">

                        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">

                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <fieldset class="form-group position-relative has-icon-left">
                                <select id="OrganizationId" name="OrganizationId" class="select2-placeholder form-control" required>
                                    <option value="" disabled selected>select organization</option>
                                    @foreach (var item in Model.Organization)
                                    {
                                        <option value="@item.Id">@item.ShortName</option>
                                    }
                                </select>
                                <div class="help-block font-small-3"></div>
                            </fieldset>

                            <fieldset class="form-group position-relative has-icon-left">
                                <input type="text" class="form-control input-lg" id="Username" name="Username" placeholder="Username" tabindex="1" required data-validation-required-message="Please enter Username.">
                                <div class="help-block font-small-3"></div>
                            </fieldset>

                            <fieldset class="form-group position-relative has-icon-left">
                                <input type="password" class="form-control input-lg" id="Password" name="Password" placeholder="Password" tabindex="1" required data-validation-required-message="Please enter Password.">
                                <div class="help-block font-small-3"></div>
                            </fieldset>

                            <fieldset class="form-group position-relative has-icon-left">
                                <input type="password" class="form-control input-lg" id="ConfirmPassword" name="ConfirmPassword" placeholder="Confirm Password" tabindex="1" required data-validation-required-message="Please enter password again.">
                                <div class="help-block font-small-3"></div>
                            </fieldset>

                            <fieldset class="form-group position-relative has-icon-left">
                                <input type="email" class="form-control input-lg" id="Email" name="Email" placeholder="Contact Email Address" tabindex="1" required data-validation-required-message="Please enter a contact email address.">
                                <div class="help-block font-small-3"></div>
                            </fieldset>

                            <fieldset class="form-group position-relative has-icon-left">
                                <input type="text" class="form-control input-lg" id="PhoneNumber" name="PhoneNumber" placeholder="Contact Phone Number" tabindex="1">
                                <div class="help-block font-small-3"></div>
                            </fieldset>

                            <fieldset class="form-group position-relative has-icon-left">
                                <input type="text" class="form-control input-lg" id="FullName" name="FullName" placeholder="Full Name" tabindex="1" required data-validation-required-message="Please enter your full name.">
                                <div class="help-block font-small-3"></div>
                            </fieldset>

                            <fieldset class="form-group position-relative has-icon-left">
                                <select class="select2-placeholder form-control" placeholder="select role" id="RoleName" name="RoleName">
                                    <option value="" disabled selected>select user role</option>
                                    @foreach (var item in Model.Roles)
                                    {
                                        <option value="@item.Key">@item.Value</option>
                                    }
                                </select>
                            </fieldset>
                            <a href='@Url.Action("index", "Account")' class="btn btn-danger btn-sm">
                                <i class="fa fa-close"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-success btn-sm"><i class="ft-save"></i> Sumbit</button>

                        </form>
                              
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
@section Scripts{

    <script src="~/app-assets/vendors/js/forms/select/select2.full.min.js" type="text/javascript"></script>
    @*<script src="~/app-assets/js/scripts/forms/select/form-select2.js" type="text/javascript"></script>*@
    <script>

        $(document).ready(function () {

            $(".select2-placeholder").select2({
                 allowClear: true
            });

        });

    </script>
}

